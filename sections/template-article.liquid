<article class="p-5">
    {% for block in section.blocks %}
        {% case block.type %}
            {% when 'article_title' %}
                <div class="flex items-center justify-center">
                    <div class="max-w-7xl text-center">
                        <a href="{{ blog.url }}" class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold">{{ blog.title }}</a>
                        <h1 class="text-4xl m:text-6xl font-medium">{{ article.title }}</h1>
                    </div>
                </div>
            {% when 'article_author' %}
                <div class="flex justify-center items-center">
                    <div class="max-w-7xl text-center">
                       {% if section.settings.enable_author %}
                            <small>{{ article.author }}</small>
                        {% endif %}
                    </div>
                </div>
            {% when 'article_published_date' %}
                {% if section.settings.enable_date %}
                    <div class="flex justify-center items-center">
                        <div class="max-w-7xl text-center">
                            <time datetime="{{ article.published_at |  date: '%Y-%m-%d' }}">{{ article.published_at |  date: format: "on_date" }}</time>
                        </div>
                    </div>
                {% endif %}
            {% when 'article_image' %}
                <div class="max-w-7xl bg-blue-100 rounded-lg mx-2 md:mx-auto overflow-hidden">
                    {% if article.image != blank %}
                        <img class="w-full h-80 m:h-96 object-cover object-center p-5" src="{{ article.image |  image_url: 'large'  }}" alt="{{ article.image.alt }}">
                    {% else %}
                        {% assign placeholder_img = 'lifestyle-2' %}
                        {{ placeholder_img |  placeholder_svg_tag: 'w-full h-80 m:h-96 object-cover object-center p-5' }}
                    {% endif %}
                </div>
            {% when 'article_content' %}
                <div class="flex justify-center items-center">
                    <div class="max-w-4xl">
                        {{ article.content }}
                    </div>
                </div>
            {% else %}
        {% endcase %}
    {% endfor %}
</article>

{% schema %}
{
    "name": "Template article",
    "settings": [
        {
            "type": "checkbox",
            "id": "enable_author",
            "label": "Show author name",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "enable_date",
            "label": "Show published date",
            "default": true
        }
    ],
    "blocks": [
        {
            "name": "Title",
            "type": "article_title",
            "limit": 1
        },
        {
            "name": "Author Name",
            "type": "article_author",
            "limit": 1
        },
        {
            "name": "Published Date",
            "type": "article_published_date",
            "limit": 1
        },
        {
            "name": "Thumbnail",
            "type": "article_image",
            "limit": 1
        },
        {
            "name": "Content",
            "type": "article_content",
            "limit": 1
        }
    ]
}
{% endschema %}