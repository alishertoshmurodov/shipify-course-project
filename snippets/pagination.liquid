{% if pagination.pages > 1 %}
    <nav role="navigation" class="flex justify-center items-center my-8">
        {% if pagination.previous %}
           <a href="{{ pagination.previous.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium transition">{{ pagination.previous.title }}</a> 
        {% endif %}

        {% if pagination.show_parts %}
            {% for part in pagination.parts %}
                {% if part.is_link %}
                    <a href="{{ part.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium transition">{{ part.title }}</a>
                {% else %}
                    <span class="border border-gray-600 bg-gray-600 text-white px-8 py-3 mx-1 rounded-sm font-medium transition">{{ part.title }}</span>
                {% endif %}
            {% endfor %}
        {% endif %}


        {% if pagination.next %}
            <a href="{{ pagination.next.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium transition">{{ pagination.next.title }}</a>
        {% endif %}
    </nav>
{% endif %}